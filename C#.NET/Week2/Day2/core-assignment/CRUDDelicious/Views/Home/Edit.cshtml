@model Delicious

    <div class="text-center">
        <h1 class="display-4">Add New Dishe</h1>
        <a class="display-9"asp-controller="Home" asp-action="Index" >Home</a>  ||  <a class="display-9" style="text-decoration: none;">New Dish</a>
    </div>
    <hr>
    <br>
    <form action="/dishes/@Model.DeliciousId" method="post" >
        <div class="d-flex justify-content-around">
            <div style="text-align: left;">
                <div class="form-group">
                    <label asp-for="Chef">Chef's Name</label>
                    <br>
                    <span asp-validation-for="Chef" style="color: pink;"></span>
                    <br>
                    <input asp-for="Chef">
                </div>
                <div class="form-group">
                    <label asp-for="Name">Name of Dish</label>
                    <br>
                    <span asp-validation-for="Name" style="color: pink;"></span>
                    <br>
                    <input asp-for="Name">
                </div>
                <div class="form-group">
                    <label asp-for="Calories">#Calorie</label>
                    <span asp-validation-for="Calories" style="color: pink;"></span>
                    <br>
                    <input asp-for="Calories" class="form-control">
                </div>
            </div>
            <div style="text-align: left;">
                <div class="form-group">
                    <label asp-for="Tastiness">Tastiness</label>
                    <br>
                    <select asp-for="Tastiness">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    </select>
                </div>
            </div>
            <div style="text-align: left;">
                <div class="form-group">
                    <label asp-for="Description">Discription</label>
                    <br>
                    <span asp-validation-for="Description" style="color: pink;"></span>
                    <br>
                    <textarea asp-for="Description" rows="3"></textarea>
                </div>
                <div>
                    <input type="submit" value="Edit Dish" class="btn btn-primary mb-2">
                </div>
            </div>
        </div>
    </form>

    

