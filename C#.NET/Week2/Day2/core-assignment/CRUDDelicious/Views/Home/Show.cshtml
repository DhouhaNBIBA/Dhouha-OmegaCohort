    @model Delicious
    <div class="text-center">
        <h1 class="display-4">@Model.Name</h1>
        <a class="display-9"asp-controller="Home" asp-action="Index" >Home</a>  ||  <a class="display-9" asp-action="Dishes" style="text-decoration: none;">New Dish</a>
    </div>
    <hr>
    <h3 style="text-decoration-line: underline;">@Model.Name by @Model.Chef</h3>
    <h4> @Model.Description</h4>
